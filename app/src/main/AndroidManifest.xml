    package="com.example.is4448project">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">

        </activity>

        <activity android:name=".Activities.CreateHeroActivity" />
        <activity android:name=".Activities.GetHeroActivity" />
        <activity android:name=".Activities.GetAllHeroesActivity" />
        <activity android:name=".Activities.UpdateHeroActivity" />
        <activity android:name=".Activities.CovidStatsActivity" />
        <activity android:name=".Activities.CovidWebviewActivity" />

        <activity android:name=".Activities.SplashActivity"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>